             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

   
        <Grid>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="5" ShadowDepth="3" />
        </Grid.Effect>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal"  Background="White">
        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Source="/Hobbisoft.Slam.Tools.Analyzers;component/Resources/microsoft-sql-server-icon.png" Height="40" Width="40" />
            <TextBlock x:Name="txtServerInfo" Margin="10" >Test</TextBlock>
        </StackPanel>
        <TextBox Grid.Row="1"  x:Name="StackPanelStatements" TextWrapping="Wrap" >
         
        </TextBox>
        </Grid>
    
</UserControl>
